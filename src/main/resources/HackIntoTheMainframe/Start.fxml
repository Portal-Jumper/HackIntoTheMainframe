<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HackIntoTheMainframe.StartController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Assets/StartBackground.jpg" />
         </image>
      </ImageView>
      <Label fx:id="labelOne" layoutX="250.0" layoutY="60.0" text="Hack Into" textFill="#a4a4a4">
         <font>
            <Font name="Century Gothic" size="65.0" />
         </font>
      </Label>
      <Button fx:id="tutorialButton" layoutX="480.0" layoutY="350.0" mnemonicParsing="false" onMouseClicked="#switchToTutorial" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #090a0c,        linear-gradient(#38424b 0%, #1f2429 20%, #191d22 100%),        linear-gradient(#20262b, #191d22),        radial-gradient(center 50% 0%, radius 100%, rgba(114,131,148,0.9), rgba(255,255,255,0));; -fx-background-radius: 5,4,3,5;; -fx-background-insets: 0,1,2,0;; -fx-text-fill: white; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 );; -fx-font-family: Arial; -fx-text-fill: linear-gradient(white, #d0d0d0);; -fx-font-size: 12; -fx-padding: 10 20 10 20;;" text="TUTORIAL" />
      <Button fx:id="playButton" layoutX="120.0" layoutY="350.0" mnemonicParsing="false" onMouseClicked="#switchToConnection"
              prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #090a0c,        linear-gradient(#38424b 0%, #1f2429 20%, #191d22 100%),        linear-gradient(#20262b, #191d22),        radial-gradient(center 50% 0%, radius 100%, rgba(114,131,148,0.9), rgba(255,255,255,0));; -fx-background-radius: 5,4,3,5;; -fx-background-insets: 0,1,2,0;; -fx-text-fill: white; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 );; -fx-font-family: Arial; -fx-text-fill: linear-gradient(white, #d0d0d0);; -fx-font-size: 12; -fx-padding: 10 20 10 20;;" text="PLAY" />
      <Label fx:id="labelOne1" layoutX="165.0" layoutY="160.0" text="The Mainframe" textFill="#a4a4a4">
         <font>
            <Font name="Century Gothic" size="65.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
